if [[ `wc -l /home/sselcuk/.settings/.namaz` < 3 ]];then
  /home/sselcuk/.bin/vakit al
fi
eval `/home/sselcuk/.bin/vakit`

kalan_vakit(){
  [[ $NAMAZ < 0 ]] && exit
  t=$[`date +%s`/60]
  if [ $NAMAZ -lt $t ]; then
    eval `/home/sselcuk/.bin/vakit`
  fi
  kalan=$[NAMAZ-t]
  echo "[$[kalan/60]sa$[kalan%60]dk]"
}

namaz(){
  if [[ $1 = "" ]];then
    vakit 3
  else
    vakit $1
  fi
}

