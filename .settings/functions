mkg() {
  mkdir $1 && cd $1
}

cpg(){
  last=${@: -1}
  [ -f $last ] && echo "$last is not a directory" && return 
  [ ! -d $last ] && mkdir $last
  while [ $# -gt 1 ];do
    cp $1 $last
    shift
  done
  cd $last
}

mvg(){
  last=${@: -1}
  [ -f $last ] && echo "$last is not a directory" && return 
  [ ! -d $last ] && mkdir $last
  while [ $# -gt 1 ];do
    mv $1 $last
    shift
  done
  cd $last
}

change_dir(){
if  [[ $# = 0 ]];then
  cd $OLDPWD
else
  pushd "-$1"
fi}

cd () {
   if [[ -f "$@" ]]; then
     builtin cd `dirname $@`
   elif builtin cd "$@" 2>/dev/null; then
   elif builtin cd "_$@" 1>/dev/null 2>/dev/null; then
     echo $PWD
   elif direc=`get_job_folder $@`; then
     if [[ $direc != "" ]]; then
       builtin cd $direc 2>/dev/null
       echo $PWD
       save "_$1"
     else 
       echo "No such file or folder: $1"
     fi
   else
     echo "No such file or folder: $1"
   fi
}
